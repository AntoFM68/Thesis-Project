<mujoco model="deepracer_circuit">

    <compiler angle="radian" inertiafromgeom="true" texturedir="Textures" />
    <option gravity="0 0 -9.81" timestep="0.002" />

    <include file="sharp_deepracer.xml"/> <!-- deepracer.xml -->

    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.6 0.6 0.8" rgb2="0.4 0.6 0.8" width="256" height="256"/>
        <texture builtin="gradient" height="100" rgb1=".4 .5 .6" rgb2="0 0 0" type="skybox" width="100" />
        <texture name="gravel" type="2d" file="gravel.png"/>
        <material name="Gravel" texrepeat="20 20" texture="gravel" />

        <!-- Straight pos="3 0.3 0" size="6 5 0.125" -->
        <texture name="straight" type="2d" file="_straight.png"/>
        <material name="straight_circuit" texture="straight" />

        <!-- Left Corner pos="2.4 2.7 0" size="6 5 0.125" -->
        <texture name="leftcorner" type="2d" file="_leftcorner.png"/>
        <material name="leftcorner_circuit" texture="leftcorner" />

        <!-- Right Corner pos="2.4 -2.65 0" size="6 5 0.125" -->
        <texture name="rightcorner" type="2d" file="_rightcorner.png"/>
        <material name="rightcorner_circuit" texture="rightcorner" />

        <!-- Oval Circuit pos="0.7 2.3 0" size="6 3 0.125" -->
        <texture name="oval" type="2d" file="_oval.png"/>
        <material name="oval_circuit" texture="oval" />

        <!-- Bowtie Circuit pos="-0.1 1.7 0" size="6 5 0.125" -->
        <texture name="bowtie" type="2d" file="_bowtie.png"/>
        <material name="bowtie_circuit" texture="bowtie" />

        <!-- Simple Circuit pos="1.2 3.75 0" size="6 5 0.125" -->
        <texture name="simple" type="2d" file="_simple.png"/>
        <material name="simple_circuit" texture="simple" />

        <!-- Monza Circuit pos="0.1 3.9 0" size="6 5 0.125" -->
        <texture name="monza" type="2d" file="_monza.png"/>
        <material name="monza_circuit" texture="monza" />
    </asset>

    <worldbody>
        <light directional="true" diffuse=".8 .8 .8" specular=".2 .2 .2" pos="0 0 5" dir="0 0 -1"/>
        <geom type="plane" material="straight_circuit" contype="1" condim="3" friction=".5 0.005 0.0001" rgba="1 1 1 1" pos="0 0.3 0" size="6 5 0.125" />
        <geom type="plane" material="Gravel" contype="1" condim="3" friction=".5 0.005 0.0001" pos="0 0 -0.01" rgba="1 1 1 1" size="15 15 0.125" />
    </worldbody>

</mujoco>